<resources>
  <!-- Base application theme. -->
  <style name="Theme.SubcompositionSandbox" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/purple500</item>
    <item name="colorPrimaryDark">@color/purple700</item>
    <item name="colorAccent">@color/teal200</item>
  </style>

  <style name="Theme.SubcompositionSandbox.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.SubcompositionSandbox.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.SubcompositionSandbox.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
